{% extends 'base.html.twig' %}

{% block title %}Accueil{% endblock %}

{% block content %}

    <div class="container-fluid">
        {# Titre de la page #}
        <div class="row">
            <div class="col-lg-12">
                <h1 class="page-header text-center mt-5">Recettes</h1>
            </div>
        </div>

        {% if is_granted('ROLE_ADMIN')%}
            <div class="row alert alert-success" role="alert">
                <div class="col-xs-3 col-sm-2">
                    <a href="{{ path('article_add') }}" role="button" class="btn btn-info">
                        <i class="fa fa-plus fa-fw"></i> Ajouter une recette
                    </a>
                </div>
            </div>
        {% endif %}
    </div>

    <div class="container-fluid">
        {% for article in articles %}
        <div class="mx-auto mt-5">
            <div class="col-lg-12 rounded mb-0 pt-1 border border-success" style="background-image: url(./media/back.png)">
                <h3 class="h5 my-3 text-center">{{ article.title }}</h3>
                    <div class="blog-grid">
                        <div class="blog-grid-img"><img class="rounded mb-0 img-fluid float-left mr-3" style="width: 300px" alt="img" src="./uploads/images/{{ article.image }}"</div>
                        <div class="blog-grid-text p-4">
                            <p class="pl-3">{{ article.content|nl2br }}</p></br>
                                <div class="mt-5 text-center">
                                    <ul class="list-unstyled">
                                        <li class="mt-2 mt-3">
                                            {% if is_granted('ROLE_ADMIN')%}
                                                <a href="{{ path('article_edit', {'id': article.id}) }}" role="button" class="btn btn-info">Modifier</a>
                                                <a href="{{ path('article_remove', {'id': article.id}) }}" role="button" class="btn btn-danger">Supprimer</a>
                                            {% endif %}
                                            <li class="mt-2">Auteur: {{ article.author.username }}</li>
                                            <li class="mt-2"><script>document.write(new Date().getFullYear())</script></li>
                                        </li>
                                    </ul>
                                </div>
                        </div>
                    </div>
            </div>
        </div>
        {% endfor %}
    </div>

{% endblock %}

{% block stylesheets %}

{% endblock %}
