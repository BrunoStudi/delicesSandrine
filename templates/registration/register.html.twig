{% extends 'base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block content %}
    <div class="container center">
        <h1 class="h3 mb-5 mt-5 pb-2 font-weight-normal text-center border-bottom">Inscription client</h1>
        {{ form_start(registrationForm, {'attr': {'class': 'col'}}) }}
            <div class="text-center input-field col s12 m6 l6 offset-m3 offset-l3 mb-3">
                {{ form_widget(registrationForm.username, {'attr': {'placeholder': 'Nom d\'utilisateur'}}) }}
                <span class="error">{{ form_errors(registrationForm.username) }}</span>
            </div>
            <div class="text-center input-field col s12 m6 l6 offset-m3 offset-l3 mb-3">
                {{ form_widget(registrationForm.plainPassword, {'attr': {'placeholder': 'Mot de passe'}}) }}
                <span class="error">{{ form_errors(registrationForm.plainPassword) }}</span>
            </div>
            <div class="text-center input-field col text-center mt-2 mb-5">
                {{ form_widget(registrationForm.diet) }}
                <span class="error">{{ form_errors(registrationForm.diet) }}</span>
            </div>
            <div class="text-center input-field col s12">
                <input type="submit" name="" class="btn btn-lg btn-primary" value="Inscription">
            </div>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
