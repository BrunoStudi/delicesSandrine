{% extends 'base.html.twig' %}

{% block title %}Connexion{% endblock %}

{% block content %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connecté en tant que {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnectez-vous.</a>
        </div>
    {% endif %}

    <h1 class="border-bottom h3 my-5 pb-5 font-weight-normal text-center" id="accroche">Connexion client</h1>

    <div class="col-md-6 rounded border border-dark bg-light mx-auto" id="shadow">
        <div class="input-field col-md-10 mx-auto mt-5">
            <label for="inputUsername" class="col-form-label"></label>
            <div>
                <p class="text-right">Vous n'êtes pas encore client: <a href="register">Cliquez ici</a></p>
                <input type="text" value="{{ last_username }}" name="username" id="inputUsername" 
                class="form-control" placeholder="Nom d'utilisateur">
            </div>
        </div>
        <div class="input-field col-md-10 mx-auto mt-2">
            <label for="inputPassword" class="col-form-label"></label>
            <div>
                <input type="password" name="password" id="inputPassword" class="form-control" 
                autocomplete="current-password" placeholder="Votre mot de passe" required>
                <p class="text-right mt-2"><a href="#">Mot de passe oublié ?</a></p>
            </div>
        </div>
        <div class="col-md-10 mx-auto mt-2">
            <button class="form-control btn btn-lg btn-warning my-4" type="submit">
                Connexion
            </button>
        </div>
        
        <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}"
        >
    
    {#
        Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
        See https://symfony.com/doc/current/security/remember_me.html

        <div class="checkbox mb-3">
            <label>
                <input type="checkbox" name="_remember_me"> Remember me
            </label>
        </div>
    #}
</form>
{% endblock %}