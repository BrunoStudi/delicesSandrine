                    {% if (article.dietFood == "Végétarien") %}
                        <h3 class="text-center h5 py-3 pl-3 rounded bg-success">{{ article.title }}</h3>
                        <div class="text-center rounded border border-success" id="shadow" style="background-image: url(./media/back.png); 
                        overflow-y: auto">
                            <img class="mx-2 mt-2 mb-4 rounded img-fluid" style="width: 340px" 
                            alt="img" src="./uploads/images/{{ article.image }}"></br>

                            {# si le contenu de la table details de la recette en cours n'est pas vide on fait une action #}
                            {% if article.details is not empty %}
                                <p class="px-3 h6 rounded border border-success bg-light col-10 col-md-8 mx-auto py-3" id="textStyle">{{ article.details|nl2br }}</p></br>
                                {% else %}
                                {# sinon, ici du vide #}
                            {% endif %}

                            <button type="button" class="btn btn-success mb-3" data-toggle="collapse" data-target="#{{ article.id }}">
                            <span class="far fa-eye"></span> Détails</button>

                            {# Contenu principal #}
                            <div id="{{ article.id }}" class="collapse rounded border border-success bg-light col-10 col-md-8 pt-2 mx-auto">
                                <p class="px-3 h6" id="textStyle"><span class="fas fa-history"></span> {{ article.temps|nl2br }}</p></br>
                                <p class="px-3 h6 border-top border-success pt-2" id="textStyle">Ingrédients :</br></br> {{ article.ingredients|nl2br }}</p></br>
                                <p class="px-3 h6 border-top border-success pt-2" id="textStyle">Préparation de la recette :</br></br>{{ article.preparation|nl2br }}</p></br>
                            </div>

                            {# Section des commentaires #}
                            <h4 class="mt-3"> Commentaires </h4>
                            {% if article.comments is not empty %}
                            <section class="my-2">
                                <button type="button" class="btn btn-success mb-3" data-toggle="collapse" data-target="#comments-{{ article.id }}">
                                <span class="far fa-eye"></span> Voir les commentaires</button>
                                <div class="collapse text-left" id="comments-{{ article.id }}">
                                    {% for comments in article.comments %}
                                            <p class="rounded border border-success bg-light col-10 col-md-8 mx-auto py-2">
